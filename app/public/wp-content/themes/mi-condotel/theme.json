{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#2563eb",
                    "name": "Primary"
                },
                {
                    "slug": "primary-light",
                    "color": "#60a5fa",
                    "name": "Primary Light"
                },
                {
                    "slug": "primary-dark",
                    "color": "#1d4ed8",
                    "name": "Primary Dark"
                },
                {
                    "slug": "secondary",
                    "color": "#10b981",
                    "name": "Secondary"
                },
                {
                    "slug": "secondary-light",
                    "color": "#34d399",
                    "name": "Secondary Light"
                },
                {
                    "slug": "secondary-dark",
                    "color": "#059669",
                    "name": "Secondary Dark"
                },
                {
                    "slug": "tertiary",
                    "color": "#f59e0b",
                    "name": "Tertiary"
                },
                {
                    "slug": "tertiary-light",
                    "color": "#fbbf24",
                    "name": "Tertiary Light"
                },
                {
                    "slug": "tertiary-dark",
                    "color": "#d97706",
                    "name": "Tertiary Dark"
                },
                {
                    "slug": "neutral",
                    "color": "#6b7280",
                    "name": "Neutral"
                },
                {
                    "slug": "neutral-light",
                    "color": "#9ca3af",
                    "name": "Neutral Light"
                },
                {
                    "slug": "neutral-dark",
                    "color": "#4b5563",
                    "name": "Neutral Dark"
                },
                {
                    "slug": "base",
                    "color": "#f9fafb",
                    "name": "Base"
                },
                {
                    "slug": "base-light",
                    "color": "#f3f4f6",
                    "name": "Base Light"
                },
                {
                    "slug": "base-dark",
                    "color": "#e5e7eb",
                    "name": "Base Dark"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                }
            ],
            "custom": true,
            "link": true,
            "defaultPalette": false,
            "customDuotone": false,
            "customGradient": false
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "name": "Body",
                    "slug": "body"
                },
                {
                    "fontFamily": "'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "name": "Heading",
                    "slug": "heading"
                }
            ],
            "fontSizes": [
                {
                    "slug": "xs",
                    "size": "0.75rem",
                    "name": "Extra Small"
                },
                {
                    "slug": "sm",
                    "size": "0.875rem",
                    "name": "Small"
                },
                {
                    "slug": "base",
                    "size": "1rem",
                    "name": "Base"
                },
                {
                    "slug": "lg",
                    "size": "1.125rem",
                    "name": "Large"
                },
                {
                    "slug": "xl",
                    "size": "1.25rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "2xl",
                    "size": "1.5rem",
                    "name": "2X Large"
                },
                {
                    "slug": "3xl",
                    "size": "1.875rem",
                    "name": "3X Large"
                },
                {
                    "slug": "4xl",
                    "size": "2.25rem",
                    "name": "4X Large"
                }
            ],
            "customFontSize": true,
            "lineHeight": true,
            "fontWeight": true,
            "letterSpacing": true
        },
        "spacing": {
            "units": ["px", "em", "rem", "%", "vw", "vh"],
            "padding": true,
            "margin": true,
            "blockGap": true,
            "spacingSizes": [
                {
                    "slug": "0",
                    "size": "0",
                    "name": "0"
                },
                {
                    "slug": "xs",
                    "size": "0.25rem",
                    "name": "Extra Small"
                },
                {
                    "slug": "sm",
                    "size": "0.5rem",
                    "name": "Small"
                },
                {
                    "slug": "base",
                    "size": "1rem",
                    "name": "Base"
                },
                {
                    "slug": "lg",
                    "size": "1.5rem",
                    "name": "Large"
                },
                {
                    "slug": "xl",
                    "size": "2rem",
                    "name": "Extra Large"
                },
                {
                    "slug": "2xl",
                    "size": "3rem",
                    "name": "2X Large"
                },
                {
                    "slug": "3xl",
                    "size": "4rem",
                    "name": "3X Large"
                },
                {
                    "slug": "4xl",
                    "size": "6rem",
                    "name": "4X Large"
                }
            ]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "custom": {
            "borderRadius": {
                "xs": "0.125rem",
                "sm": "0.25rem",
                "base": "0.375rem",
                "lg": "0.5rem",
                "xl": "0.75rem",
                "2xl": "1rem",
                "3xl": "1.5rem",
                "4xl": "2rem",
                "full": "9999px"
            },
            "fontWeight": {
                "light": "300",
                "normal": "400",
                "medium": "500",
                "semibold": "600",
                "bold": "700",
                "extrabold": "800"
            },
            "lineHeight": {
                "none": "1",
                "tight": "1.25",
                "snug": "1.375",
                "normal": "1.5",
                "relaxed": "1.625",
                "loose": "2"
            },
            "letterSpacing": {
                "tighter": "-0.05em",
                "tight": "-0.025em",
                "normal": "0",
                "wide": "0.025em",
                "wider": "0.05em",
                "widest": "0.1em"
            }
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": true
                }
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--base)",
            "text": "var(--wp--preset--color--neutral-dark)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--base)",
            "lineHeight": "var(--wp--custom--line-height--normal)"
        },
        "spacing": {
            "blockGap": "var(--wp--preset--spacing--lg)",
            "padding": {
                "top": "0",
                "right": "0",
                "bottom": "0",
                "left": "0"
            }
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--primary-dark)"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--4xl)",
                    "fontWeight": "var(--wp--custom--font-weight--bold)",
                    "lineHeight": "var(--wp--custom--line-height--tight)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--3xl)",
                    "fontWeight": "var(--wp--custom--font-weight--bold)",
                    "lineHeight": "var(--wp--custom--line-height--tight)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--2xl)",
                    "fontWeight": "var(--wp--custom--font-weight--semibold)",
                    "lineHeight": "var(--wp--custom--line-height--snug)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xl)",
                    "fontWeight": "var(--wp--custom--font-weight--semibold)",
                    "lineHeight": "var(--wp--custom--line-height--snug)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--lg)",
                    "fontWeight": "var(--wp--custom--font-weight--medium)",
                    "lineHeight": "var(--wp--custom--line-height--normal)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--base)",
                    "fontWeight": "var(--wp--custom--font-weight--medium)",
                    "lineHeight": "var(--wp--custom--line-height--normal)"
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ]
}
