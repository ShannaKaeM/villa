{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "miblocks/hero",
    "version": "1.0.0",
    "title": "Hero",
    "category": "miblocks",
    "icon": "cover-image",
    "description": "A customizable hero section with background image and text overlay",
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "textdomain": "mi-condotel",
    "editorScript": "file:./build/index.js",
    "editorStyle": "file:./styles/editor.css",
    "style": "file:./styles/block.css",
    "render": "file:./render.php",
    "attributes": {
        "title": {
            "type": "string",
            "default": ""
        },
        "subtitle": {
            "type": "string",
            "default": ""
        },
        "backgroundImage": {
            "type": "string",
            "default": ""
        },
        "minHeight": {
            "type": "string",
            "default": "500px"
        },
        "widthOption": {
            "type": "string",
            "default": "90",
            "enum": ["90", "content"]
        },
        "borderRadius": {
            "type": "string",
            "default": "2xl",
            "enum": ["none", "xs", "sm", "md", "lg", "xl", "2xl", "3xl", "4xl", "full"]
        },
        "overlayColor": {
            "type": "string",
            "default": "primary",
            "enum": ["primary", "secondary", "tertiary", "neutral", "base", "white", "black"]
        },
        "overlayVariation": {
            "type": "string",
            "default": "med",
            "enum": ["lightest", "light", "med", "dark", "darkest"]
        },
        "overlayOpacity": {
            "type": "number",
            "default": 0.5
        },
        "titleSize": {
            "type": "string",
            "default": "3xl",
            "enum": ["xs", "sm", "base", "lg", "xl", "2xl", "3xl", "4xl", "5xl"]
        },
        "titleWeight": {
            "type": "string",
            "default": "bold",
            "enum": ["extra-light", "light", "normal", "semibold", "bold", "extra-bold"]
        },
        "titleColor": {
            "type": "string",
            "default": "white",
            "enum": ["primary", "secondary", "tertiary", "neutral", "base", "white", "black"]
        },
        "titleColorVariation": {
            "type": "string",
            "default": "med",
            "enum": ["lightest", "light", "med", "dark", "darkest"]
        },
        "titleTracking": {
            "type": "string",
            "default": "normal",
            "enum": ["tighter", "tight", "normal", "wide", "wider", "widest"]
        },
        "titleTransform": {
            "type": "string",
            "default": "none",
            "enum": ["none", "uppercase", "lowercase", "capitalize"]
        },
        "titleSpacing": {
            "type": "string",
            "default": "md",
            "enum": ["xs", "sm", "md", "lg", "xl", "2xl"]
        },
        "subtitleSize": {
            "type": "string",
            "default": "lg",
            "enum": ["xs", "sm", "base", "lg", "xl", "2xl", "3xl"]
        },
        "subtitleWeight": {
            "type": "string",
            "default": "normal",
            "enum": ["extra-light", "light", "normal", "semibold", "bold", "extra-bold"]
        },
        "subtitleColor": {
            "type": "string",
            "default": "white",
            "enum": ["primary", "secondary", "tertiary", "neutral", "base", "white", "black"]
        },
        "subtitleColorVariation": {
            "type": "string",
            "default": "med",
            "enum": ["lightest", "light", "med", "dark", "darkest"]
        },
        "subtitleTracking": {
            "type": "string",
            "default": "normal",
            "enum": ["tighter", "tight", "normal", "wide", "wider", "widest"]
        },
        "subtitleTransform": {
            "type": "string",
            "default": "none",
            "enum": ["none", "uppercase", "lowercase", "capitalize"]
        }
    }
}
