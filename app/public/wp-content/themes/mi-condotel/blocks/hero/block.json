{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "miblocks/hero",
    "version": "1.0.0",
    "title": "Hero",
    "category": "miBlocks",
    "icon": "cover-image",
    "description": "A hero section with customizable background, text, and layout options.",
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "textdomain": "mi-condotel",
    "editorScript": "file:./build/index.js",
    "editorStyle": "file:./styles/editor.css",
    "style": "file:./styles/block.css",
    "render": "file:./render.php",
    "attributes": {
        "backgroundImage": {
            "type": "string",
            "default": ""
        },
        "backgroundImageId": {
            "type": "number",
            "default": 0
        },
        "overlayColor": {
            "type": "string",
            "default": "#000000"
        },
        "overlayOpacity": {
            "type": "number",
            "default": 50
        },
        "title": {
            "type": "string",
            "default": ""
        },
        "titleColor": {
            "type": "string",
            "default": "#ffffff"
        },
        "titleSize": {
            "type": "string",
            "default": "2.25rem"
        },
        "titleWeight": {
            "type": "string",
            "default": "var(--wp--custom--font-weight--bold)"
        },
        "titleTracking": {
            "type": "string",
            "default": "var(--wp--custom--letter-spacing--normal)"
        },
        "subtitle": {
            "type": "string",
            "default": ""
        },
        "subtitleColor": {
            "type": "string",
            "default": "#ffffff"
        },
        "subtitleSize": {
            "type": "string",
            "default": "1.25rem"
        },
        "subtitleWeight": {
            "type": "string",
            "default": "var(--wp--custom--font-weight--normal)"
        },
        "subtitleTracking": {
            "type": "string",
            "default": "var(--wp--custom--letter-spacing--normal)"
        },
        "minHeight": {
            "type": "number",
            "default": 400
        },
        "padding": {
            "type": "object",
            "default": {
                "top": "3rem",
                "right": "1rem",
                "bottom": "3rem",
                "left": "1rem"
            }
        },
        "borderRadius": {
            "type": "string",
            "default": "var(--wp--custom--border-radius--lg)"
        },
        "width": {
            "type": "string",
            "default": "wide"
        }
    }
}
