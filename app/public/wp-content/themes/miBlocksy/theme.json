{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#4d6a6d",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#9c5961",
                    "name": "Secondary"
                },
                {
                    "slug": "neutral",
                    "color": "#a69f95",
                    "name": "Neutral"
                },
                {
                    "slug": "base",
                    "color": "#808080",
                    "name": "Base"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Inter, system-ui, sans-serif",
                    "name": "Inter",
                    "slug": "inter"
                }
            ],
            "fontSizes": [
                {
                    "size": "0.875rem",
                    "slug": "small",
                    "name": "Small"
                },
                {
                    "size": "1rem",
                    "slug": "medium",
                    "name": "Medium"
                },
                {
                    "size": "1.125rem",
                    "slug": "large",
                    "name": "Large"
                },
                {
                    "size": "1.25rem",
                    "slug": "x-large",
                    "name": "Extra Large"
                },
                {
                    "size": "1.5rem",
                    "slug": "xx-large",
                    "name": "Extra Extra Large"
                }
            ]
        },
        "spacing": {
            "spacingScale": {
                "steps": 1
            },
            "spacingSizes": [
                {
                    "size": "0.25rem",
                    "slug": "10",
                    "name": "1"
                },
                {
                    "size": "0.5rem",
                    "slug": "20",
                    "name": "2"
                },
                {
                    "size": "1rem",
                    "slug": "30",
                    "name": "3"
                },
                {
                    "size": "1.5rem",
                    "slug": "40",
                    "name": "4"
                },
                {
                    "size": "2rem",
                    "slug": "50",
                    "name": "5"
                },
                {
                    "size": "3rem",
                    "slug": "60",
                    "name": "6"
                }
            ]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1400px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--black)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "elements": {
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "typography": {
                    "fontWeight": "500"
                },
                "border": {
                    "radius": "0.375rem"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            }
        },
        "blocks": {
            "core/heading": {
                "typography": {
                    "fontWeight": "600",
                    "lineHeight": "1.2"
                }
            }
        }
    }
}
