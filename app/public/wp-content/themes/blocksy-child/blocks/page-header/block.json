{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "miblocks/page-header",
  "version": "1.0.0",
  "title": "Page Header",
  "category": "miblocks",
  "icon": "cover-image",
  "description": "A full-width page header with background image, title and subtitle",
  "supports": {
    "html": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "Page Title"
    },
    "subtitle": {
      "type": "string",
      "default": "Add a description or subtitle for this page"
    },
    "backgroundImage": {
      "type": "string",
      "default": "http://villa-community20.local/wp-content/uploads/2025/05/Kitchen1.png"
    },
    "overlayOpacity": {
      "type": "number",
      "default": 0.5
    },
    "minHeight": {
      "type": "string",
      "default": "400px"
    }
  },
  "editorScript": "file:./build/index.js",
  "render": "file:./render.php"
}
