{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "miblocks/card-loop",
    "version": "1.0.0",
    "title": "Card Loop",
    "category": "miblocks",
    "icon": "grid-view",
    "description": "Display posts in a customizable card layout with filtering options.",
    "supports": {
        "html": false,
        "align": ["wide", "full"],
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "postType": {
            "type": "string",
            "default": "property"
        },
        "postsPerPage": {
            "type": "number",
            "default": 6
        },
        "columns": {
            "type": "number",
            "default": 3
        },
        "showFilter": {
            "type": "boolean",
            "default": true
        },
        "filterPosition": {
            "type": "string",
            "default": "left"
        },
        "cardStyle": {
            "type": "string",
            "default": "default"
        },
        "showPagination": {
            "type": "boolean",
            "default": true
        },
        "selectedCategories": {
            "type": "array",
            "default": []
        },
        "selectedTags": {
            "type": "array",
            "default": []
        }
    },
    "textdomain": "miblocks",
    "editorScript": "file:./build/index.js",
    "editorStyle": "file:./build/index.css",
    "style": "file:./build/style-index.css",
    "viewScript": "file:./build/view.js",
    "render": "file:./render.php"
}
