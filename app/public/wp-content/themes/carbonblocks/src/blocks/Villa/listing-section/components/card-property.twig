{# Property Card Component #}
<article class="carbon-card carbon-card--property carbon-card--{{ style }}">
    {% if post.thumbnail %}
        <div class="carbon-card__image">
            <img src="{{ fn('get_the_post_thumbnail_url', post.ID, 'medium_large') }}" 
                 alt="{{ post.post_title }}" 
                 loading="lazy">
            {% if post.property_status %}
                <span class="carbon-card__badge carbon-card__badge--{{ post.property_status|lower }}">
                    {{ post.property_status }}
                </span>
            {% endif %}
        </div>
    {% endif %}
    
    <div class="carbon-card__content">
        <h3 class="carbon-card__title">
            <a href="{{ fn('get_permalink', post.ID) }}">{{ post.post_title }}</a>
        </h3>
        
        {% if post.property_price %}
            <div class="carbon-card__price">
                ${{ post.property_price|number_format }}
            </div>
        {% endif %}
        
        <div class="carbon-card__meta">
            {% if post.property_bedrooms %}
                <span class="carbon-card__meta-item">
                    <svg class="carbon-card__icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    {{ post.property_bedrooms }} {{ __('Beds', 'carbonblocks') }}
                </span>
            {% endif %}
            
            {% if post.property_bathrooms %}
                <span class="carbon-card__meta-item">
                    <svg class="carbon-card__icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                    </svg>
                    {{ post.property_bathrooms }} {{ __('Baths', 'carbonblocks') }}
                </span>
            {% endif %}
            
            {% if post.property_size %}
                <span class="carbon-card__meta-item">
                    <svg class="carbon-card__icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    </svg>
                    {{ post.property_size }} {{ __('sq ft', 'carbonblocks') }}
                </span>
            {% endif %}
        </div>
        
        {% if style == 'detailed' and post.post_excerpt %}
            <p class="carbon-card__excerpt">{{ post.post_excerpt|truncate(120) }}</p>
        {% endif %}
    </div>
</article>
