{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "spacing": {
            "blockGap": true,
            "margin": true,
            "padding": true,
            "units": [
                "px",
                "em",
                "rem",
                "%",
                "vh",
                "vw"
            ]
        },
        "layout": {
            "contentSize": "var(--theme-block-max-width)",
            "wideSize": "var(--theme-block-wide-max-width)"
        },
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "Inter, system-ui, sans-serif",
                    "name": "Inter",
                    "slug": "inter"
                }
            ],
            "fontSizes": [
                {
                    "fluid": false,
                    "size": "13px",
                    "slug": "small"
                },
                {
                    "fluid": false,
                    "size": "20px",
                    "slug": "medium"
                },
                {
                    "fluid": {
                        "min": "22px",
                        "max": "30px"
                    },
                    "size": "30px",
                    "slug": "large"
                },
                {
                    "fluid": {
                        "min": "30px",
                        "max": "50px"
                    },
                    "size": "50px",
                    "slug": "x-large"
                },
                {
                    "fluid": {
                        "min": "45px",
                        "max": "80px"
                    },
                    "size": "80px",
                    "slug": "xx-large"
                }
            ]
        },
        "color": {
            "palette": [
                {
                    "slug": "primary-light",
                    "color": "#8dabac",
                    "name": "Primary Light"
                },
                {
                    "slug": "primary",
                    "color": "#5a7f80",
                    "name": "Primary"
                },
                {
                    "slug": "primary-dark",
                    "color": "#425a5b",
                    "name": "Primary Dark"
                },
                {
                    "slug": "secondary-light",
                    "color": "#75825b",
                    "name": "Secondary Light"
                },
                {
                    "slug": "secondary",
                    "color": "#c6d3ce",
                    "name": "Secondary"
                },
                {
                    "slug": "secondary-dark",
                    "color": "#a3b9b4",
                    "name": "Secondary Dark"
                },
                {
                    "slug": "neutral-light",
                    "color": "#c9ccc5",
                    "name": "Neutral Light"
                },
                {
                    "slug": "neutral",
                    "color": "#9b8974",
                    "name": "Neutral"
                },
                {
                    "slug": "neutral-dark",
                    "color": "#736654",
                    "name": "Neutral Dark"
                },
                {
                    "slug": "base-white",
                    "color": "#ffffff",
                    "name": "Base White"
                },
                {
                    "slug": "base-lightest",
                    "color": "#e5e5e5",
                    "name": "Base Lightest"
                },
                {
                    "slug": "base-light",
                    "color": "#bfbfbf",
                    "name": "Base Light"
                },
                {
                    "slug": "base",
                    "color": "#9c9c9c",
                    "name": "Base"
                },
                {
                    "slug": "base-dark",
                    "color": "#737373",
                    "name": "Base Dark"
                },
                {
                    "slug": "base-darkest",
                    "color": "#4d4d4d",
                    "name": "Base Darkest"
                },
                {
                    "slug": "base-black",
                    "color": "#000000",
                    "name": "Base Black"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--base-white)",
            "text": "var(--wp--preset--color--base-black)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "blockGap": "var(--theme-content-spacing)"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "typography": { 
                    "textDecoration": "none" 
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--base-white)"
                },
                "typography": {
                    "fontWeight": "500"
                },
                "border": {
                    "radius": "0.375rem"
                }
            }
        },
        "blocks": {
            "core/heading": {
                "typography": {
                    "fontWeight": "600",
                    "lineHeight": "1.2"
                }
            }
        }
    }
}
