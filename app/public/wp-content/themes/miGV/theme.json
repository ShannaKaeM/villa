{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "color": {
            "custom": true,
            "customDuotone": true,
            "customGradient": true,
            "defaultDuotones": false,
            "defaultGradients": false,
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "primary",
                    "color": "#5a7f80",
                    "name": "Primary"
                },
                {
                    "slug": "primary-light",
                    "color": "#8dabac",
                    "name": "Primary Light"
                },
                {
                    "slug": "primary-dark",
                    "color": "#425a5b",
                    "name": "Primary Dark"
                },
                {
                    "slug": "secondary",
                    "color": "#7c3aed",
                    "name": "Secondary"
                },
                {
                    "slug": "secondary-light",
                    "color": "#c4b5fd",
                    "name": "Secondary Light"
                },
                {
                    "slug": "secondary-dark",
                    "color": "#6d28d9",
                    "name": "Secondary Dark"
                },
                {
                    "slug": "neutral",
                    "color": "#6b7280",
                    "name": "Neutral"
                },
                {
                    "slug": "neutral-light",
                    "color": "#d1d5db",
                    "name": "Neutral Light"
                },
                {
                    "slug": "neutral-dark",
                    "color": "#374151",
                    "name": "Neutral Dark"
                },
                {
                    "slug": "success",
                    "color": "#10b981",
                    "name": "Success"
                },
                {
                    "slug": "warning",
                    "color": "#f59e0b",
                    "name": "Warning"
                },
                {
                    "slug": "error",
                    "color": "#ef4444",
                    "name": "Error"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                },
                {
                    "slug": "gray-50",
                    "color": "#f9fafb",
                    "name": "Gray 50"
                },
                {
                    "slug": "gray-100",
                    "color": "#f3f4f6",
                    "name": "Gray 100"
                },
                {
                    "slug": "gray-200",
                    "color": "#e5e7eb",
                    "name": "Gray 200"
                },
                {
                    "slug": "gray-300",
                    "color": "#d1d5db",
                    "name": "Gray 300"
                },
                {
                    "slug": "gray-400",
                    "color": "#9ca3af",
                    "name": "Gray 400"
                },
                {
                    "slug": "gray-500",
                    "color": "#6b7280",
                    "name": "Gray 500"
                },
                {
                    "slug": "gray-600",
                    "color": "#4b5563",
                    "name": "Gray 600"
                },
                {
                    "slug": "gray-700",
                    "color": "#374151",
                    "name": "Gray 700"
                },
                {
                    "slug": "gray-800",
                    "color": "#1f2937",
                    "name": "Gray 800"
                },
                {
                    "slug": "gray-900",
                    "color": "#111827",
                    "name": "Gray 900"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-gradient",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--primary) 0%, var(--wp--preset--color--primary-dark) 100%)",
                    "name": "Primary Gradient"
                },
                {
                    "slug": "secondary-gradient",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--secondary) 0%, var(--wp--preset--color--secondary-dark) 100%)",
                    "name": "Secondary Gradient"
                },
                {
                    "slug": "neutral-gradient",
                    "gradient": "linear-gradient(135deg, var(--wp--preset--color--gray-100) 0%, var(--wp--preset--color--gray-300) 100%)",
                    "name": "Neutral Gradient"
                }
            ]
        },
        "typography": {
            "customFontSize": true,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "lineHeight": true,
            "textDecoration": true,
            "textTransform": true,
            "dropCap": false,
            "fontFamilies": [
                {
                    "fontFamily": "Inter, system-ui, -apple-system, sans-serif",
                    "name": "Inter",
                    "slug": "inter"
                },
                {
                    "fontFamily": "'JetBrains Mono', 'Fira Code', 'Courier New', monospace",
                    "name": "JetBrains Mono",
                    "slug": "jetbrains-mono"
                }
            ],
            "fontSizes": [
                {
                    "size": "0.75rem",
                    "slug": "x-small",
                    "name": "Extra Small"
                },
                {
                    "size": "0.875rem",
                    "slug": "small",
                    "name": "Small"
                },
                {
                    "size": "1rem",
                    "slug": "medium",
                    "name": "Medium"
                },
                {
                    "size": "1.125rem",
                    "slug": "large",
                    "name": "Large"
                },
                {
                    "size": "1.25rem",
                    "slug": "x-large",
                    "name": "Extra Large"
                },
                {
                    "size": "1.5rem",
                    "slug": "xx-large",
                    "name": "2X Large"
                },
                {
                    "size": "1.875rem",
                    "slug": "xxx-large",
                    "name": "3X Large"
                },
                {
                    "size": "2.25rem",
                    "slug": "xxxx-large",
                    "name": "4X Large"
                },
                {
                    "size": "3rem",
                    "slug": "xxxxx-large",
                    "name": "5X Large"
                },
                {
                    "size": "3.75rem",
                    "slug": "xxxxxx-large",
                    "name": "6X Large"
                }
            ]
        },
        "spacing": {
            "customSpacingSize": true,
            "spacingScale": {
                "steps": 1
            },
            "spacingSizes": [
                {
                    "size": "0.25rem",
                    "slug": "10",
                    "name": "1"
                },
                {
                    "size": "0.5rem",
                    "slug": "20",
                    "name": "2"
                },
                {
                    "size": "0.75rem",
                    "slug": "30",
                    "name": "3"
                },
                {
                    "size": "1rem",
                    "slug": "40",
                    "name": "4"
                },
                {
                    "size": "1.25rem",
                    "slug": "50",
                    "name": "5"
                },
                {
                    "size": "1.5rem",
                    "slug": "60",
                    "name": "6"
                },
                {
                    "size": "2rem",
                    "slug": "70",
                    "name": "7"
                },
                {
                    "size": "2.5rem",
                    "slug": "80",
                    "name": "8"
                },
                {
                    "size": "3rem",
                    "slug": "90",
                    "name": "9"
                },
                {
                    "size": "4rem",
                    "slug": "100",
                    "name": "10"
                }
            ],
            "units": ["px", "em", "rem", "vh", "vw", "%"]
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "layout": {
            "contentSize": "1280px",
            "wideSize": "1536px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--gray-900)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        },
        "spacing": {
            "blockGap": "1.5rem"
        },
        "elements": {
            "button": {
                "border": {
                    "radius": "0.375rem"
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "right": "1.5rem",
                        "bottom": "0.75rem",
                        "left": "1.5rem"
                    }
                },
                "typography": {
                    "fontWeight": "500"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--primary-dark)"
                    }
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--primary-dark)"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xxxx-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.25"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xxx-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.25"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.25"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.25"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600",
                    "lineHeight": "1.25"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "600",
                    "lineHeight": "1.25"
                }
            }
        },
        "blocks": {
            "core/navigation": {
                "elements": {
                    "link": {
                        "typography": {
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "typography": {
                                "textDecoration": "underline"
                            }
                        }
                    }
                }
            },
            "core/post-title": {
                "elements": {
                    "link": {
                        "typography": {
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "typography": {
                                "textDecoration": "underline"
                            }
                        }
                    }
                }
            },
            "core/quote": {
                "border": {
                    "left": {
                        "color": "var(--wp--preset--color--primary)",
                        "style": "solid",
                        "width": "4px"
                    }
                },
                "spacing": {
                    "padding": {
                        "left": "1rem"
                    }
                },
                "typography": {
                    "fontStyle": "italic"
                },
                "color": {
                    "text": "var(--wp--preset--color--gray-600)"
                }
            },
            "core/pullquote": {
                "border": {
                    "top": {
                        "color": "var(--wp--preset--color--primary)",
                        "style": "solid",
                        "width": "4px"
                    },
                    "bottom": {
                        "color": "var(--wp--preset--color--primary)",
                        "style": "solid",
                        "width": "4px"
                    }
                }
            },
            "core/code": {
                "border": {
                    "radius": "0.375rem"
                },
                "color": {
                    "background": "var(--wp--preset--color--gray-100)",
                    "text": "var(--wp--preset--color--gray-800)"
                },
                "spacing": {
                    "padding": {
                        "top": "0.25rem",
                        "right": "0.5rem",
                        "bottom": "0.25rem",
                        "left": "0.5rem"
                    }
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--jetbrains-mono)",
                    "fontSize": "var(--wp--preset--font-size--small)"
                }
            },
            "core/preformatted": {
                "border": {
                    "radius": "0.5rem"
                },
                "color": {
                    "background": "var(--wp--preset--color--gray-900)",
                    "text": "var(--wp--preset--color--gray-100)"
                },
                "spacing": {
                    "padding": "1rem"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--jetbrains-mono)"
                }
            }
        }
    }
}
