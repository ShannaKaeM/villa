{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "spacing": {
            "blockGap": true,
            "margin": true,
            "padding": true,
            "units": [
                "px",
                "em",
                "rem",
                "%",
                "vh",
                "vw"
            ]
        },
        "layout": {
            "contentSize": "var(--theme-block-max-width)",
            "wideSize": "var(--theme-block-wide-max-width)"
        },
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "Inter, system-ui, sans-serif",
                    "name": "Inter",
                    "slug": "inter"
                },
                {
                    "fontFamily": "Playfair Display, serif",
                    "name": "Playfair Display",
                    "slug": "playfair-display"
                },
                {
                    "fontFamily": "Roboto, sans-serif",
                    "name": "Roboto",
                    "slug": "roboto"
                }
            ],
            "fontSizes": [
                {
                    "fluid": false,
                    "size": "0.8125rem",
                    "slug": "small"
                },
                {
                    "fluid": false,
                    "size": "1rem",
                    "slug": "medium"
                },
                {
                    "fluid": false,
                    "size": "1.25rem",
                    "slug": "large"
                },
                {
                    "fluid": false,
                    "size": "1.5rem",
                    "slug": "x-large"
                },
                {
                    "fluid": false,
                    "size": "2rem",
                    "slug": "xx-large"
                },
                {
                    "fluid": false,
                    "size": "6.25rem",
                    "slug": "huge"
                }
            ],
            "fontWeight": true,
            "lineHeight": true,
            "letterSpacing": true,
            "textTransform": true,
            "customTextStyles": {
                "pre-title": [],
                "title": [],
                "subtitle": [],
                "section-title": [],
                "body": [],
                "caption": [],
                "button": []
            }
        },
        "color": {
            "palette": [
                {
                    "slug": "primary-light",
                    "color": "#91a39d",
                    "name": "Primary Light"
                },
                {
                    "slug": "primary",
                    "color": "#425a5b",
                    "name": "Primary"
                },
                {
                    "slug": "primary-dark",
                    "color": "#253a39",
                    "name": "Primary Dark"
                },
                {
                    "slug": "secondary-light",
                    "color": "#c38484",
                    "name": "Secondary Light"
                },
                {
                    "slug": "secondary",
                    "color": "#975d55",
                    "name": "Secondary"
                },
                {
                    "slug": "secondary-dark",
                    "color": "#853d2d",
                    "name": "Secondary Dark"
                },
                {
                    "slug": "neutral-light",
                    "color": "#bfbeb5",
                    "name": "Neutral Light"
                },
                {
                    "slug": "neutral",
                    "color": "#a9a59e",
                    "name": "Neutral"
                },
                {
                    "slug": "neutral-dark",
                    "color": "#253a39",
                    "name": "Neutral Dark"
                },
                {
                    "slug": "extreme-light",
                    "color": "#ffffff",
                    "name": "Extreme Light"
                },
                {
                    "slug": "base-lightest",
                    "color": "#ededed",
                    "name": "Base Lightest"
                },
                {
                    "slug": "base-light",
                    "color": "#a2a2a2",
                    "name": "Base Light"
                },
                {
                    "slug": "base",
                    "color": "#626262",
                    "name": "Base"
                },
                {
                    "slug": "base-dark",
                    "color": "#2b2b2a",
                    "name": "Base Dark"
                },
                {
                    "slug": "base-darkest",
                    "color": "#0f0f0f",
                    "name": "Base Darkest"
                },
                {
                    "slug": "extreme-dark",
                    "color": "#000000",
                    "name": "Extreme Dark"
                }
            ]
        },
        "custom": {
            "typography": {
                "baseStyles": {
                    "baseFontSize": "1rem",
                    "fontWeights": {
                        "regular": "400",
                        "medium": "500",
                        "semiBold": "600",
                        "bold": "700",
                        "extraBold": "800"
                    },
                    "lineHeights": {
                        "base": "1.6",
                        "heading": "1.2"
                    },
                    "letterSpacing": {
                        "tight": "-0.025em",
                        "normal": "0",
                        "wide": "0.025em",
                        "wider": "0.05em",
                        "widest": "0.1em"
                    }
                }
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--base-white)",
            "text": "var(--wp--preset--color--base-darkest)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--inter)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6",
            "letterSpacing": "0"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontWeight": "600",
                    "lineHeight": "1.2",
                    "letterSpacing": "-0.025em"
                },
                "color": {
                    "text": "var(--wp--preset--color--base-darkest)"
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--huge)",
                    "fontWeight": "700",
                    "lineHeight": "1.1",
                    "letterSpacing": "-0.025em"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.2",
                    "letterSpacing": "-0.025em"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.2",
                    "letterSpacing": "0"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600",
                    "lineHeight": "1.3",
                    "letterSpacing": "0"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "600",
                    "lineHeight": "1.4",
                    "letterSpacing": "0"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "600",
                    "lineHeight": "1.4",
                    "letterSpacing": "0.025em",
                    "textTransform": "uppercase"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "typography": {
                    "textDecoration": "none"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--primary-dark)"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--base-white)"
                },
                "typography": {
                    "fontWeight": "500",
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "letterSpacing": "0.025em"
                },
                "border": {
                    "radius": "0.375rem",
                    "width": "0",
                    "style": "none"
                },
                "spacing": {
                    "padding": {
                        "top": "0.75rem",
                        "right": "1.5rem",
                        "bottom": "0.75rem",
                        "left": "1.5rem"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--primary-dark)"
                    }
                }
            },
            "caption": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontStyle": "italic"
                },
                "color": {
                    "text": "var(--wp--preset--color--neutral)"
                }
            },
            "cite": {
                "typography": {
                    "fontStyle": "italic"
                }
            }
        },
        "blocks": {
            "core/heading": {
                "typography": {
                    "fontWeight": "600",
                    "lineHeight": "1.2"
                }
            },
            "core/paragraph": {
                "typography": {
                    "lineHeight": "1.6"
                }
            },
            "core/list": {
                "typography": {
                    "lineHeight": "1.6"
                }
            },
            "core/quote": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontStyle": "italic",
                    "lineHeight": "1.4"
                },
                "border": {
                    "left": {
                        "width": "4px",
                        "style": "solid",
                        "color": "var(--wp--preset--color--primary)"
                    }
                },
                "spacing": {
                    "padding": {
                        "left": "1.5rem"
                    }
                }
            },
            "core/pullquote": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                }
            },
            "core/code": {
                "typography": {
                    "fontFamily": "monospace",
                    "fontSize": "0.875rem"
                },
                "color": {
                    "background": "var(--wp--preset--color--base)",
                    "text": "var(--wp--preset--color--base-darkest)"
                },
                "border": {
                    "radius": "0.25rem"
                },
                "spacing": {
                    "padding": {
                        "top": "0.5rem",
                        "right": "0.75rem",
                        "bottom": "0.5rem",
                        "left": "0.75rem"
                    }
                }
            },
            "core/preformatted": {
                "typography": {
                    "fontFamily": "monospace",
                    "fontSize": "0.875rem"
                },
                "color": {
                    "background": "var(--wp--preset--color--base-darkest)",
                    "text": "var(--wp--preset--color--base-white)"
                },
                "border": {
                    "radius": "0.5rem"
                },
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "right": "1rem",
                        "bottom": "1rem",
                        "left": "1rem"
                    }
                }
            }
        }
    }
}