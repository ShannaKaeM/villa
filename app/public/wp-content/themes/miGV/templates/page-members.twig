{% extends "base.twig" %}

{% block content %}
    <main id="primary" class="content-area members-page">
        <div class="members-container">
            <header class="page-header">
                <h1 class="page-title">{{ __('Community Members', 'migv') }}</h1>
                <p class="page-description">{{ __('Connect with property owners, business owners, and community members', 'migv') }}</p>
            </header>

            {% if user.logged_in %}
                <div class="members-directory">
                    {{ post.content }}
                </div>
            {% else %}
                <div class="members-login-required">
                    <div class="login-prompt">
                        <h2>{{ __('Member Directory Access', 'migv') }}</h2>
                        <p>{{ __('Please login to view and connect with community members.', 'migv') }}</p>
                        
                        <div class="member-preview">
                            <h3>{{ __('What you can do as a member:', 'migv') }}</h3>
                            <ul>
                                <li>{{ __('Browse member profiles', 'migv') }}</li>
                                <li>{{ __('Connect with property owners', 'migv') }}</li>
                                <li>{{ __('Find local business owners', 'migv') }}</li>
                                <li>{{ __('Join community discussions', 'migv') }}</li>
                                <li>{{ __('Access member-only content', 'migv') }}</li>
                            </ul>
                        </div>
                        
                        <div class="login-actions">
                            <a href="/login" class="button primary">{{ __('Login', 'migv') }}</a>
                            <a href="/register" class="button secondary">{{ __('Join Community', 'migv') }}</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </main>

    <style>
    .members-page {
        padding: 60px 0;
        background: #f8f9fa;
        min-height: 70vh;
    }
    
    .members-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }
    
    .page-header {
        text-align: center;
        margin-bottom: 50px;
    }
    
    .page-title {
        font-size: 2.5rem;
        color: var(--wp--preset--color--primary, #2c3e50);
        margin-bottom: 15px;
    }
    
    .page-description {
        color: #666;
        font-size: 1.1rem;
        max-width: 600px;
        margin: 0 auto;
    }
    
    .members-directory {
        background: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
    
    .members-login-required {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 400px;
    }
    
    .login-prompt {
        background: white;
        padding: 50px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        text-align: center;
        max-width: 500px;
    }
    
    .login-prompt h2 {
        color: var(--wp--preset--color--primary, #2c3e50);
        margin-bottom: 20px;
        font-size: 1.8rem;
    }
    
    .login-prompt > p {
        color: #666;
        margin-bottom: 30px;
        font-size: 1.1rem;
    }
    
    .member-preview {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 8px;
        margin: 30px 0;
        text-align: left;
    }
    
    .member-preview h3 {
        color: var(--wp--preset--color--primary, #2c3e50);
        margin-bottom: 15px;
        font-size: 1.2rem;
    }
    
    .member-preview ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .member-preview li {
        padding: 8px 0;
        position: relative;
        padding-left: 25px;
    }
    
    .member-preview li:before {
        content: "â†’";
        position: absolute;
        left: 0;
        color: var(--wp--preset--color--primary, #3498db);
        font-weight: bold;
    }
    
    .login-actions {
        margin-top: 30px;
    }
    
    .login-actions .button {
        display: inline-block;
        margin: 0 10px;
        padding: 15px 30px;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .login-actions .button.primary {
        background: var(--wp--preset--color--primary, #3498db);
        color: white;
    }
    
    .login-actions .button.primary:hover {
        background: var(--wp--preset--color--secondary, #2980b9);
        transform: translateY(-2px);
    }
    
    .login-actions .button.secondary {
        background: transparent;
        color: var(--wp--preset--color--primary, #3498db);
        border: 2px solid var(--wp--preset--color--primary, #3498db);
    }
    
    .login-actions .button.secondary:hover {
        background: var(--wp--preset--color--primary, #3498db);
        color: white;
        transform: translateY(-2px);
    }
    
    @media (max-width: 768px) {
        .login-prompt {
            padding: 30px 20px;
            margin: 0 20px;
        }
        
        .login-actions .button {
            display: block;
            margin: 10px 0;
            width: 100%;
        }
    }
    </style>
{% endblock %}
