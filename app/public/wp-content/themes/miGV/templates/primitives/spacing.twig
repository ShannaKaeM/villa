{#
  Spacing Primitive - Pure Design Tokens
  
  This primitive provides pure spacing design tokens from theme.json.
  It should ONLY contain foundational spacing properties, no semantic styling.
  
  Usage:
  {% include 'primitives/spacing.twig' with {
    padding: 'lg',
    margin: 'md',
    gap: 'sm'
  } %}
#}

{% set spacing_tokens = {
  spacing: {
    xs: 'var(--wp--preset--spacing--xs)',
    sm: 'var(--wp--preset--spacing--sm)',
    md: 'var(--wp--preset--spacing--md)',
    lg: 'var(--wp--preset--spacing--lg)',
    xl: 'var(--wp--preset--spacing--xl)',
    '2xl': 'var(--wp--preset--spacing--2xl)',
    '3xl': 'var(--wp--preset--spacing--3xl)',
    '4xl': 'var(--wp--preset--spacing--4xl)',
    '5xl': 'var(--wp--preset--spacing--5xl)',
    '6xl': 'var(--wp--preset--spacing--6xl)'
  }
} %}

{# Apply spacing styles based on parameters #}
{% if padding %}
  padding: {{ spacing_tokens.spacing[padding] ?? padding }};
{% endif %}

{% if padding_top %}
  padding-top: {{ spacing_tokens.spacing[padding_top] ?? padding_top }};
{% endif %}

{% if padding_bottom %}
  padding-bottom: {{ spacing_tokens.spacing[padding_bottom] ?? padding_bottom }};
{% endif %}

{% if padding_left %}
  padding-left: {{ spacing_tokens.spacing[padding_left] ?? padding_left }};
{% endif %}

{% if padding_right %}
  padding-right: {{ spacing_tokens.spacing[padding_right] ?? padding_right }};
{% endif %}

{% if margin %}
  margin: {{ spacing_tokens.spacing[margin] ?? margin }};
{% endif %}

{% if margin_top %}
  margin-top: {{ spacing_tokens.spacing[margin_top] ?? margin_top }};
{% endif %}

{% if margin_bottom %}
  margin-bottom: {{ spacing_tokens.spacing[margin_bottom] ?? margin_bottom }};
{% endif %}

{% if margin_left %}
  margin-left: {{ spacing_tokens.spacing[margin_left] ?? margin_left }};
{% endif %}

{% if margin_right %}
  margin-right: {{ spacing_tokens.spacing[margin_right] ?? margin_right }};
{% endif %}

{% if gap %}
  gap: {{ spacing_tokens.spacing[gap] ?? gap }};
{% endif %}
