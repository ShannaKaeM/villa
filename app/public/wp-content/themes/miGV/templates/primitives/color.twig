{#
  Color Book Interface
  
  Complete color management interface displaying all theme.json colors
  organized into sections with interactive controls and real-time preview.
#}

<div class="color-book-container">
    <div class="color-book-header">
        <h2>Color Book</h2>
        <p>Manage your color palette with real-time preview and multiple format support.</p>
    </div>

    <div class="color-sections">
        <!-- Primary Colors -->
        <div class="color-section">
            <h3>Primary</h3>
            <div class="color-grid">
                {% for color in colors.palette %}
                    {% if color.slug starts with 'primary' %}
                        <div class="color-card">
                            <div class="color-swatch" style="background-color: {{ color.color }};"></div>
                            <div class="color-info">
                                <div class="color-name">{{ color.name }}</div>
                                <input type="text" class="hex-input" value="{{ color.color }}" data-color-slug="{{ color.slug }}">
                                
                                <div class="color-controls">
                                    <div class="control-group">
                                        <label>Hue</label>
                                        <input type="range" class="hue-slider" min="0" max="360" value="182" data-color-slug="{{ color.slug }}">
                                        <span class="control-value">182°</span>
                                    </div>
                                    <div class="control-group">
                                        <label>Sat</label>
                                        <input type="range" class="saturation-slider" min="0" max="100" value="16" data-color-slug="{{ color.slug }}">
                                        <span class="control-value">16%</span>
                                    </div>
                                    <div class="control-group">
                                        <label>Light</label>
                                        <input type="range" class="lightness-slider" min="0" max="100" value="42" data-color-slug="{{ color.slug }}">
                                        <span class="control-value">42%</span>
                                    </div>
                                    <div class="control-group">
                                        <label>Alpha</label>
                                        <input type="range" class="alpha-slider" min="0" max="100" value="100" data-color-slug="{{ color.slug }}">
                                        <span class="control-value">100%</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>

