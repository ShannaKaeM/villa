            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="color-actions">
        <button type="button" class="btn btn-primary" id="save-colors">Save Colors</button>
        <button type="button" class="btn btn-secondary" id="reset-colors">Reset to Defaults</button>
    </div>
</div>
