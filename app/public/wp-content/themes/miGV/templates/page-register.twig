{% extends "base.twig" %}

{% block content %}
    <main id="primary" class="content-area register-page">
        <div class="register-container">
            <header class="page-header">
                <h1 class="page-title">{{ __('Join Villa Community', 'migv') }}</h1>
                <p class="page-description">{{ __('Create your account and become part of our community', 'migv') }}</p>
            </header>

            <div class="register-form-wrapper">
                {% if not user.logged_in %}
                    <div class="membership-benefits">
                        <h3>{{ __('Membership Benefits', 'migv') }}</h3>
                        <ul>
                            <li>{{ __('Browse and list properties', 'migv') }}</li>
                            <li>{{ __('Connect with local businesses', 'migv') }}</li>
                            <li>{{ __('Access community discussions', 'migv') }}</li>
                            <li>{{ __('Get exclusive member updates', 'migv') }}</li>
                        </ul>
                    </div>

                    {{ post.content }}
                    
                    <div class="register-links">
                        <p>
                            {{ __('Already have an account?', 'migv') }} 
                            <a href="/login">{{ __('Login here', 'migv') }}</a>
                        </p>
                    </div>
                {% else %}
                    <div class="already-logged-in">
                        <h2>{{ __('Welcome!', 'migv') }}</h2>
                        <p>{{ __('You are already a member of Villa Community.', 'migv') }}</p>
                        <div class="user-actions">
                            <a href="{{ user.link }}" class="button">{{ __('View Profile', 'migv') }}</a>
                            <a href="/" class="button secondary">{{ __('Go to Homepage', 'migv') }}</a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </main>

    <style>
    .register-page {
        padding: 60px 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 80vh;
    }
    
    .register-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 0 20px;
    }
    
    .page-header {
        text-align: center;
        margin-bottom: 40px;
        color: white;
    }
    
    .page-title {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }
    
    .page-description {
        font-size: 1.1rem;
        opacity: 0.9;
    }
    
    .register-form-wrapper {
        background: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }
    
    .membership-benefits {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
        border-left: 4px solid var(--wp--preset--color--primary, #3498db);
    }
    
    .membership-benefits h3 {
        color: var(--wp--preset--color--primary, #2c3e50);
        margin-bottom: 15px;
        font-size: 1.2rem;
    }
    
    .membership-benefits ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .membership-benefits li {
        padding: 8px 0;
        position: relative;
        padding-left: 25px;
    }
    
    .membership-benefits li:before {
        content: "âœ“";
        position: absolute;
        left: 0;
        color: var(--wp--preset--color--primary, #27ae60);
        font-weight: bold;
    }
    
    .register-links {
        margin-top: 30px;
        text-align: center;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }
    
    .register-links a {
        color: var(--wp--preset--color--primary, #3498db);
        text-decoration: none;
        font-weight: 500;
    }
    
    .register-links a:hover {
        text-decoration: underline;
    }
    
    .already-logged-in {
        text-align: center;
    }
    
    .user-actions {
        margin-top: 30px;
    }
    
    .user-actions .button {
        display: inline-block;
        margin: 0 10px;
        padding: 12px 24px;
        background: var(--wp--preset--color--primary, #3498db);
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }
    
    .user-actions .button:hover {
        background: var(--wp--preset--color--secondary, #2980b9);
    }
    
    .user-actions .button.secondary {
        background: #95a5a6;
    }
    
    .user-actions .button.secondary:hover {
        background: #7f8c8d;
    }
    </style>
{% endblock %}
