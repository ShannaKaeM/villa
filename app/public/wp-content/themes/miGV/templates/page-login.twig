{% extends "base.twig" %}

{% block content %}
    <main id="primary" class="content-area login-page">
        <div class="login-container">
            <header class="page-header">
                <h1 class="page-title">{{ __('Member Login', 'migv') }}</h1>
                <p class="page-description">{{ __('Access your Villa Community account', 'migv') }}</p>
            </header>

            <div class="login-form-wrapper">
                {% if not user.logged_in %}
                    {{ post.content }}
                    
                    <div class="login-links">
                        <p>
                            {{ __("Don't have an account?", 'migv') }} 
                            <a href="/register">{{ __('Register here', 'migv') }}</a>
                        </p>
                        <p>
                            <a href="/password-reset">{{ __('Forgot your password?', 'migv') }}</a>
                        </p>
                    </div>
                {% else %}
                    <div class="already-logged-in">
                        <h2>{{ __('Welcome back!', 'migv') }}</h2>
                        <p>{{ __('You are already logged in.', 'migv') }}</p>
                        <div class="user-actions">
                            <a href="{{ user.link }}" class="button">{{ __('View Profile', 'migv') }}</a>
                            <a href="/" class="button secondary">{{ __('Go to Homepage', 'migv') }}</a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </main>

    <style>
    .login-page {
        padding: 60px 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 70vh;
    }
    
    .login-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 0 20px;
    }
    
    .page-header {
        text-align: center;
        margin-bottom: 40px;
    }
    
    .page-title {
        font-size: 2.5rem;
        color: var(--wp--preset--color--primary, #2c3e50);
        margin-bottom: 10px;
    }
    
    .page-description {
        color: #666;
        font-size: 1.1rem;
    }
    
    .login-form-wrapper {
        background: white;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .login-links {
        margin-top: 30px;
        text-align: center;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }
    
    .login-links p {
        margin: 10px 0;
    }
    
    .login-links a {
        color: var(--wp--preset--color--primary, #3498db);
        text-decoration: none;
        font-weight: 500;
    }
    
    .login-links a:hover {
        text-decoration: underline;
    }
    
    .already-logged-in {
        text-align: center;
    }
    
    .user-actions {
        margin-top: 30px;
    }
    
    .user-actions .button {
        display: inline-block;
        margin: 0 10px;
        padding: 12px 24px;
        background: var(--wp--preset--color--primary, #3498db);
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 500;
        transition: background-color 0.3s ease;
    }
    
    .user-actions .button:hover {
        background: var(--wp--preset--color--secondary, #2980b9);
    }
    
    .user-actions .button.secondary {
        background: #95a5a6;
    }
    
    .user-actions .button.secondary:hover {
        background: #7f8c8d;
    }
    </style>
{% endblock %}
